{
  "compilerOptions": {
    "outDir": "distribution",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "strict": true,
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "distribution"
  ]
}